@page "/AddNewEmployee"
@using EmployeeCRUDBlazor.Data

@inject EmployeeService employeeService
@inject NavigationManager NavigationManager

<h3>Add New Employee</h3>
<hr />

<form>
    <div class="row">
        <div class="col=md-8">
            <div class="for-group">
                <label for="FirstName" class="control-label">First Name</label>
                <input form="FirstName" class="form-control" @bind="@obj.FirstName"></input>
            </div>

            <div class="for-group">
                <label for="MiddleName" class="control-label">Middle Name</label>
                <input form="MiddleName" class="form-control" @bind="@obj.MiddleName"></input>
            </div>

            <div class="for-group">
                <label for="LastName" class="control-label">Last Name</label>
                <input form="LastName" class="form-control" @bind="@obj.LastName"></input>
            </div>

            <div class="for-group">
                <label for="EmailAddress" class="control-label">Email Address</label>
                <input form="EmailAddress" class="form-control" @bind="@obj.EmailAddress"></input>
            </div>

            <div class="for-group">
                <label for="PhoneNumber" class="control-label">Phone Number</label>
                <input form="PhoneNumber" class="form-control" @bind="@obj.PhoneNumber"></input>
            </div>

            <div class="for-group">
                <label for="Address" class="control-label">Address</label>
                <input form="Address" class="form-control" @bind="@obj.Address"></input>
            </div>


            <div class="for-group">
                <label for="Designation" class="control-label">Designation</label>
                <input form="Designation" class="form-control" @bind="@obj.Designation"></input>
            </div>

        </div>
    </div>
    <div class="row">
        <div class="col-md-4">
            <div class="form-group">
                <input type="button" class="btn btn-primary" @onclick="@CreateNewEmployee" value="Save Employee" />

                <input type="button" class="btn btn-danger" @onclick="@Cancel" value="Cancel"/>
            </div>
        </div>
    </div>
</form>

@code {
    Employee obj = new Employee();

    protected async void CreateNewEmployee()
    {
        await employeeService.AddNewEmployee(obj);
        NavigationManager.NavigateTo("Employees");
    }
    protected async void Cancel()
    {
        NavigationManager.NavigateTo("Employees");
    }
}
